                                    *Team1_a = 0;
                                }
                                if (*Team2_b == *Team1_A && *Team1_A == *Team1_a)
                                {
                                    Token_B = 'T';
                                    *Team1_A = 0;
                                    *Team1_a = 0;
                                    stacked_A = 'F';
                                }
                                if (*Team2_B == *Team2_b && *Team2_B != 0 && *Team2_b != 0)
                                {
                                    stacked_B = 'T';
                                    movePiece(*Team2_B, *Team2_b, 'D', Team2_b);
                                }
                                print_Map(map);
                            }
                        }
                    }
                    else
                    {
                        if (*Team2_B == *Team2_b && *Team2_B != 0 && *Team2_b != 0) stacked_B = 'T';
                        if (stacked_B == 'T')
                        {
                            temp1 = *Team2_b;
                            *Team2_b += wantYut;
                            temp2 = *Team2_b;
                            *Team2_B = temp2;
                            movePiece(temp1, temp2, 'D', Team2_b);
                            if (*Team2_b == *Team1_A && *Team1_A != *Team1_a)
                            {
                                Token_B = 'T';
                                *Team1_A = 0;
                            }
                            else if (*Team2_b == *Team1_a && *Team1_A != *Team1_a)
                            {
                                Token_B = 'T';
                                *Team1_a = 0;
                            }
                            else if (*Team2_b == *Team1_A && *Team1_A == *Team1_a)
                            {
                                Token_B = 'T';
                                *Team1_A = 0;
                                *Team1_a = 0;
                                stacked_A = 'F';
                            }
                            print_Map(map);
                        }
                        else
                        {
                            temp1 = *Team2_b;
                            *Team2_b += wantYut;
                            temp2 = *Team2_b;
                            movePiece(temp1, temp2, 'b', Team2_b);
                            if (*Team2_b == *Team1_A && *Team1_A != *Team1_a)
                            {
                                Token_B = 'T';
                                *Team1_A = 0;
                            }
                            if (*Team2_b == *Team1_a && *Team1_A != *Team1_a)
                            {
                                Token_B = 'T';
                                *Team1_a = 0;
                            }
                            if (*Team2_b == *Team1_A && *Team1_A == *Team1_a)
                            {
                                Token_B = 'T';
                                *Team1_A = 0;
                                *Team1_a = 0;
                                stacked_A = 'F';
                            }
                            if (*Team2_B == *Team2_b && *Team2_B != 0 && *Team2_b != 0)
                            {
                                stacked_B = 'T';
                                movePiece(*Team2_B, *Team2_b, 'D', Team2_b);
                            }
                            print_Map(map);
                        }
                    }
                    count_ne--;
                    break;
                }
                else if (i == count - 1)
                {
                    printf("\n그 윷은 던진 적이 없습니다.\n\n");
                    break;
                }
            }
        }
        else
        {
            printf("그런 말은 없습니다.\n\n");
            goto RE;
        }

    }
}

void Throwing_Yuts(int* yut_array, int* count, char *name)
{
    const int go[16] = { 1,1,1,2,2,2,2,2,2,3,3,3,3,4,5,6 };
    int state = 0, i = 0;
    yut_array[20] = { 0, };
    char act;
    printf("%s! 윷을 던지시려면 엔터를 눌러주세요.\n\n", name);
    scanf("%c", &act);
    while (1)
    {
        int yut = go[rand() % 16];
        state = 0;
        switch (yut)
        {
        case 1:
            yut_array[i] = yut;
            printf("도!\n");
            break;
        case 2:
            yut_array[i] = yut;
            printf("개!\n");
            break;
        case 3:
            yut_array[i] = yut;
            printf("걸!\n");
            break;
        case 4:
            yut_array[i] = yut;
            printf("윷!\n");
            i++;
            state = 1;
            break;
        case 5:
            yut_array[i] = yut;
            printf("모!\n");
            i++;
            state = 1;
            break;
        case 6:
            yut_array[i] = yut;
            printf("빽도!\n");
            break;
        }
        if (state == 0) break;
    }
    *count = i + 1;
}

void setTeamName(char* Team1, char* Team2)
{
    char Temp[16];
    printf("\n순서를 정하기 위해 윷을 처음 던질 팀의 이름을 입력해주세요 >");
    scanf("%s", Temp);
    strcpy(Team1, Temp);
    printf("\n순서를 정하기 위해 윷을 두 번째로 던질 팀의 이름을 입력해주세요 >");
    scanf("%s", Temp);
    strcpy(Team2, Temp);
}

void Deciding_the_Order(char* name1, char* name2)
{

    int go[16] = { 1,1,1,2,2,2,2,2,2,3,3,3,3,4,5,0 };
    char act;
    char name_yut1[20];
    char name_yut2[20];
    char zero[10] = "빽도";
    char one[4] = "도";
    char two[4] = "개";
    char three[4] = "걸";
    char four[4] = "윷";
    char five[4] = "모";
Ex:
    system("cls");
    printf("%s! 윷을 던지시려면 엔터를 눌러주세요.\n\n", name1);
    scanf("%c", &act);
    getchar();
    int yut1 = go[rand() % 16];
    switch (yut1)
    {
    case 0:
        strcpy(name_yut1, zero);
        break;
    case 1:
        strcpy(name_yut1, one);
        break;
    case 2:
        strcpy(name_yut1, two);
        break;
    case 3:
        strcpy(name_yut1, three);
        break;
    case 4:
        strcpy(name_yut1, four);
        break;
    case 5:
        strcpy(name_yut1, five);
        break;
    }
    printf("------------------------------\n%s의 윷: %s\n------------------------------\n\n\n", name1, name_yut1);
    printf("%s! 윷을 던지시려면 엔터를 눌러주세요.\n\n", name2);
    scanf("%c", &act);
    int yut2 = go[rand() % 16];
    switch (yut2)
    {
    case 0:
        strcpy(name_yut2, zero);
        break;
    case 1:
        strcpy(name_yut2, one);
        break;
    case 2:
        strcpy(name_yut2, two);
        break;
    case 3:
        strcpy(name_yut2, three);
        break;
    case 4:
        strcpy(name_yut2, four);
        break;
    case 5:
        strcpy(name_yut2, five);
        break;
    }
    printf("------------------------------\n%s의 윷: %s\n------------------------------\n\n\n", name2, name_yut2);
    if (yut1 == yut2)
    {
        printf("두 팀의 윷이 같아 재진행합니다!\n\n");
        Sleep(3000);
        goto Ex;
    }

    if (yut1 < yut2) printf("%s의 선입니다!\n\n\n", name1);

    if (yut1 > yut2)
    {
        char tmp[20];
        printf("%s의 선입니다!\n\n\n", name2);
        *tmp = *name1;
        *name1 = *name2;
        *name2 = *tmp;
    }
    Sleep(3000);
    system("cls");
} //main func needs "srand(time(NULL))", team names

int main()
{
    init_Map(map);
    srand((unsigned int)time(NULL));

    int yut_array[10] = { 0, };
    int count = 0;
    int Team1_A = 0, Team1_a = 0, Team2_B = 0, Team2_b = 0;
    char name1[20], name2[20];

    Rules();
    setTeamName(name1, name2);
    Deciding_the_Order(name1, name2);

    while (1)
    {
        Throwing_Yuts(yut_array, &count, name1);
        Team1_Go_Piece(yut_array, count, &Team1_A, &Team1_a, &Team2_B, &Team2_b);
        do
        {
            if (Token_A == 'T')
            {
                Token_A = 'F';
                Throwing_Yuts(yut_array, &count, name1);
                Team1_Go_Piece(yut_array, count, &Team1_A, &Team1_a, &Team2_B, &Team2_b);
            }
        } while (Token_A == 'T');
        printf("\n");


        if (Team1_A > 20 && Team1_a > 20)
        {
            printf("\n\n축하합니다 !! %s의 승리입니다!", name1);
            break;
        }

        Throwing_Yuts(yut_array, &count, name2);
        Team2_Go_Piece(yut_array, count, &Team2_B, &Team2_b, &Team1_A, &Team1_a);
        do
        {
            if (Token_B == 'T')
            {
                Token_B = 'F';
                Throwing_Yuts(yut_array, &count, name2);
                Team2_Go_Piece(yut_array, count, &Team2_B, &Team2_b, &Team1_A, &Team1_a);
            }
        } while (Token_B == 'T');
        printf("\n");

        if (Team2_B > 20 && Team2_b > 20)
        {
            printf("\n\n축하합니다 !! %s의 승리입니다!", name2);
            break;
        }

    }
}
